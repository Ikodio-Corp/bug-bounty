# Production Environment Configuration

# Application
APP_NAME=IKODIO-BugBounty
APP_ENV=production
DEBUG=false
SECRET_KEY=your-secure-secret-key-change-this
API_V1_PREFIX=/api
ALLOWED_HOSTS=api.ikodio.com,ikodio.com

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
RELOAD=false

# Database
DATABASE_URL=postgresql+asyncpg://ikodio_prod:secure-password@postgres-prod.internal:5432/ikodio_prod
DATABASE_POOL_SIZE=50
DATABASE_MAX_OVERFLOW=100
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Database Sharding
ENABLE_SHARDING=true
DATABASE_URL_SHARD_0=postgresql+asyncpg://ikodio_prod:secure-password@postgres-shard-0.internal:5432/ikodio_shard_0
DATABASE_URL_SHARD_1=postgresql+asyncpg://ikodio_prod:secure-password@postgres-shard-1.internal:5432/ikodio_shard_1
DATABASE_URL_SHARD_2=postgresql+asyncpg://ikodio_prod:secure-password@postgres-shard-2.internal:5432/ikodio_shard_2

# Redis
REDIS_URL=redis://redis-prod.internal:6379/0
REDIS_PASSWORD=secure-redis-password
REDIS_MAX_CONNECTIONS=100
REDIS_DECODE_RESPONSES=true

# Celery
CELERY_BROKER_URL=redis://redis-prod.internal:6379/1
CELERY_RESULT_BACKEND=redis://redis-prod.internal:6379/2
CELERY_WORKER_PREFETCH_MULTIPLIER=4
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Security
CORS_ORIGINS=https://ikodio.com,https://www.ikodio.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Email
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_FROM=noreply@ikodio.com
SMTP_FROM_NAME=IKODIO BugBounty

# Payment
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ikodio-prod-uploads

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GRAFANA_URL=https://grafana.ikodio.com
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=secure-grafana-password
PROMETHEUS_URL=http://prometheus.internal:9090

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/ikodio/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10

# Feature Flags
ENABLE_AI_AGENTS=true
ENABLE_UNIVERSITY=true
ENABLE_GEOPOLITICAL=true
ENABLE_MARKETPLACE=true
ENABLE_GUILD=true

# External Services
BURP_API_URL=https://burp.internal:8080
BURP_API_KEY=your-burp-api-key
ZAP_API_URL=https://zap.internal:8080
ZAP_API_KEY=your-zap-api-key
NUCLEI_BINARY_PATH=/usr/local/bin/nuclei

# PWA
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# GitHub Integration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/ikodio.crt
SSL_KEY_PATH=/etc/ssl/private/ikodio.key
SSL_CA_BUNDLE=/etc/ssl/certs/ca-bundle.crt
