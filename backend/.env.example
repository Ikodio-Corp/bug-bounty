# =============================================
# IKODIO BUG BOUNTY PLATFORM - BACKEND CONFIG
# =============================================

# === DATABASE CONFIGURATION ===
DATABASE_URL=postgresql://ikodio_user:your_secure_password@localhost:5432/ikodio_bugbounty
POSTGRES_USER=ikodio_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=ikodio_bugbounty
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# === REDIS CONFIGURATION ===
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# === JWT & SECURITY ===
SECRET_KEY=your_super_secret_key_change_this_in_production_min_32_chars
JWT_SECRET_KEY=your_jwt_secret_key_change_this_in_production_min_32_chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# === API KEYS & INTEGRATIONS ===
# Stripe for payments
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email service (SendGrid/Mailgun/SMTP)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@ikodio.com
EMAIL_FROM_NAME=IKODIO Bug Bounty

# Alternative: SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true

# === CLOUD PROVIDER CREDENTIALS ===
# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Azure
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id

# GCP
GCP_PROJECT_ID=your_gcp_project_id
GCP_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json

# DigitalOcean
DIGITALOCEAN_TOKEN=your_digitalocean_token

# === AI & ML CONFIGURATION ===
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key
HUGGINGFACE_API_KEY=your_huggingface_api_key

# === SECURITY SCANNERS ===
# Nuclei
NUCLEI_TEMPLATES_PATH=/opt/nuclei-templates
NUCLEI_RATE_LIMIT=150

# OWASP ZAP
ZAP_API_KEY=your_zap_api_key
ZAP_HOST=localhost
ZAP_PORT=8080

# Burp Suite
BURP_API_KEY=your_burp_api_key
BURP_HOST=localhost
BURP_PORT=1337

# === BLOCKCHAIN & WEB3 ===
# Ethereum/Polygon for NFT minting
WEB3_PROVIDER_URL=https://polygon-mainnet.infura.io/v3/your_infura_project_id
INFURA_PROJECT_ID=your_infura_project_id
INFURA_PROJECT_SECRET=your_infura_project_secret
CONTRACT_ADDRESS=0xYourSmartContractAddress
PRIVATE_KEY=your_wallet_private_key_for_transactions

# IKOD Token Contract
IKOD_TOKEN_CONTRACT=0xYourIKODTokenContractAddress
DAO_GOVERNANCE_CONTRACT=0xYourDAOGovernanceContractAddress

# === STORAGE ===
# S3 compatible storage
S3_BUCKET_NAME=ikodio-bugbounty-uploads
S3_ENDPOINT_URL=https://s3.amazonaws.com
S3_ACCESS_KEY_ID=your_s3_access_key
S3_SECRET_ACCESS_KEY=your_s3_secret_key

# === MONITORING & LOGGING ===
# Sentry for error tracking
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password

# === RATE LIMITING ===
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# === CELERY WORKERS ===
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_WORKER_CONCURRENCY=4

# === APPLICATION SETTINGS ===
ENVIRONMENT=development
DEBUG=true
API_VERSION=v1
API_PREFIX=/api/v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true
MAX_UPLOAD_SIZE_MB=50

# === FEATURE FLAGS ===
ENABLE_AUTO_FIX=true
ENABLE_INSURANCE=true
ENABLE_SECURITY_SCORE=true
ENABLE_MARKETPLACE_FUTURES=true
ENABLE_DAO_GOVERNANCE=true
ENABLE_DEVOPS_AUTOPILOT=true
ENABLE_QUANTUM_SECURITY=true
ENABLE_SATELLITE_SCANNING=true

# === INSURANCE CONFIGURATION ===
INSURANCE_BASE_RATE_MIN=0.02
INSURANCE_BASE_RATE_MAX=0.05
INSURANCE_RISK_MULTIPLIER_MIN=0.5
INSURANCE_RISK_MULTIPLIER_MAX=2.5
INSURANCE_POLICY_DURATION_DAYS=365

# === MARKETPLACE CONFIGURATION ===
MARKETPLACE_INSTANT_PAYMENT_PERCENTAGE=0.80
MARKETPLACE_PLATFORM_FEE=0.10
MARKETPLACE_FUTURE_SETTLEMENT_DAYS=30

# === DAO CONFIGURATION ===
DAO_MINIMUM_TOKENS_PROPOSAL=1000
DAO_VOTING_PERIOD_DAYS=7
DAO_QUORUM_PERCENTAGE=0.10
DAO_EXECUTION_DELAY_HOURS=24

# === DEVOPS AUTOPILOT CONFIGURATION ===
DEVOPS_AUTO_SCALING_ENABLED=true
DEVOPS_COST_OPTIMIZATION_TARGET=0.50
DEVOPS_SELF_HEALING_ENABLED=true
DEVOPS_MAX_RESOLUTION_TIME_SECONDS=120
DEVOPS_MONITORING_INTERVAL_SECONDS=30

# === SECURITY SCORE CONFIGURATION ===
SECURITY_SCORE_MIN=300
SECURITY_SCORE_MAX=850
SECURITY_SCORE_WEIGHT_TECHNICAL=0.40
SECURITY_SCORE_WEIGHT_PROCESS=0.25
SECURITY_SCORE_WEIGHT_COMPLIANCE=0.20
SECURITY_SCORE_WEIGHT_HISTORICAL=0.15

# === NOTIFICATION SETTINGS ===
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# === BACKUP & DISASTER RECOVERY ===
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=ikodio-backups

# === TESTING ===
TEST_DATABASE_URL=postgresql://ikodio_user:test_password@localhost:5433/ikodio_bugbounty_test
TEST_REDIS_URL=redis://localhost:6380/0

# === PRODUCTION-ONLY SETTINGS (uncomment for production) ===
# ENVIRONMENT=production
# DEBUG=false
# ALLOWED_ORIGINS=https://ikodio.com,https://app.ikodio.com
# USE_SSL=true
# SSL_CERTIFICATE_PATH=/etc/ssl/certs/ikodio.crt
# SSL_PRIVATE_KEY_PATH=/etc/ssl/private/ikodio.key
