# IKODIO BugBounty Platform Configuration
# Copy this file to .env and update with your values

# ============================================
# Database Configuration
# ============================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ikodio_bugbounty
DB_USER=ikodio
DB_PASSWORD=change_this_secure_password
POSTGRES_MAX_CONNECTIONS=200

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_MAX_MEMORY=8gb

# ============================================
# RabbitMQ Configuration
# ============================================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=ikodio
RABBITMQ_PASSWORD=change_this_rabbitmq_password
RABBITMQ_VHOST=/

# ============================================
# Elasticsearch Configuration
# ============================================
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX_PREFIX=ikodio

# ============================================
# API Keys - AI Services
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
COHERE_API_KEY=your-cohere-key-here
HUGGINGFACE_API_KEY=your-huggingface-key-here

# ============================================
# Bug Bounty Platform Credentials
# ============================================
HACKERONE_API_KEY=your-hackerone-api-key
HACKERONE_USERNAME=your-username
BUGCROWD_API_KEY=your-bugcrowd-api-key
INTIGRITI_API_KEY=your-intigriti-api-key
YESWEHACK_API_KEY=your-yeswehack-api-key

# ============================================
# Security & Authentication
# ============================================
JWT_SECRET=generate_a_long_random_string_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
ENCRYPTION_KEY=32_byte_encryption_key_here
SECRET_KEY=django_style_secret_key_here

# ============================================
# Application Settings
# ============================================
APP_NAME=IKODIO BugBounty
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production

# ============================================
# Network Configuration
# ============================================
EXTERNAL_IP=0.0.0.0
DOMAIN=bugbounty.ikodio.com
API_PORT=8000
FRONTEND_PORT=3000
SSL_ENABLED=true

# ============================================
# Feature Flags - All 70 Ideas
# ============================================
ENABLE_AI=true
ENABLE_GPU=true
ENABLE_QUANTUM=false
ENABLE_SATELLITE=false
ENABLE_MARKETPLACE=true
ENABLE_NFT=false
ENABLE_DAO=false
ENABLE_GUILD=true
ENABLE_UNIVERSITY_PROGRAM=true
ENABLE_NATION_STATE=false
ENABLE_SANCTIONS=false
ENABLE_ESG=true
ENABLE_CELEBRITY=false
ENABLE_REALITY_SHOW=false

# ============================================
# Scanning Configuration
# ============================================
MAX_CONCURRENT_SCANS=100
SCAN_TIMEOUT=300
MAX_AGENTS_PER_SCAN=1000
DISCOVERY_TIME_LIMIT=90
VALIDATION_TIME_LIMIT=20
REPORTING_TIME_LIMIT=20

# ============================================
# AI Configuration
# ============================================
AI_MODEL=gpt-4-turbo-preview
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=4000
AI_AGENT_COUNT=1000
VECTOR_DB_PROVIDER=pinecone
PINECONE_API_KEY=your-pinecone-key
PINECONE_ENVIRONMENT=us-west1-gcp

# ============================================
# Security Tools Configuration
# ============================================
NUCLEI_TEMPLATES_PATH=/tools/nuclei-templates
SQLMAP_PATH=/tools/sqlmap
BURP_API_KEY=your-burp-api-key
ZAP_API_KEY=your-zap-api-key

# ============================================
# Monitoring & Logging
# ============================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_this_grafana_password
PROMETHEUS_RETENTION=30d
SENTRY_DSN=your-sentry-dsn-here
DATADOG_API_KEY=your-datadog-key

# ============================================
# Email Configuration
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@ikodio.com

# ============================================
