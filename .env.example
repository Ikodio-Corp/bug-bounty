# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_LOCATION=/data/backups
S3_BACKUP_BUCKET=ikodio-bugbounty-backups
