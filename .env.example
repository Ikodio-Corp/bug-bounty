SUBSCRIPTION_BRONZE_PRICE=10
SUBSCRIPTION_SILVER_PRICE=50
SUBSCRIPTION_GOLD_PRICE=500
SUBSCRIPTION_PLATINUM_PRICE=5000

# ============================================
