      try {
        await api.post('/marketplace/purchase', { listing_id: listingId })
        alert('Purchase successful!')
        fetchListings()
      } catch (error: any) {
        alert(error.response?.data?.detail || 'Purchase failed. Please try again.')
      }
    }
  }

