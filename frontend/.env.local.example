# =============================================
# IKODIO BUG BOUNTY PLATFORM - FRONTEND CONFIG
# =============================================

# === API CONFIGURATION ===
# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# Production (uncomment for production)
# NEXT_PUBLIC_API_URL=https://api.ikodio.com/api/v1
# NEXT_PUBLIC_WS_URL=wss://api.ikodio.com/ws

# === STRIPE PAYMENT ===
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# === BLOCKCHAIN & WEB3 ===
# Polygon/Ethereum for NFT minting and DAO
NEXT_PUBLIC_CHAIN_ID=137
NEXT_PUBLIC_RPC_URL=https://polygon-mainnet.infura.io/v3/your_infura_project_id
NEXT_PUBLIC_IKOD_TOKEN_CONTRACT=0xYourIKODTokenContractAddress
NEXT_PUBLIC_DAO_GOVERNANCE_CONTRACT=0xYourDAOGovernanceContractAddress

# === ANALYTICS & MONITORING ===
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# Sentry (frontend error tracking)
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# === AUTHENTICATION ===
# JWT token storage key
NEXT_PUBLIC_TOKEN_KEY=ikodio_auth_token
NEXT_PUBLIC_REFRESH_TOKEN_KEY=ikodio_refresh_token

# === FEATURE FLAGS ===
NEXT_PUBLIC_ENABLE_AUTO_FIX=true
NEXT_PUBLIC_ENABLE_INSURANCE=true
NEXT_PUBLIC_ENABLE_SECURITY_SCORE=true
NEXT_PUBLIC_ENABLE_MARKETPLACE_FUTURES=true
NEXT_PUBLIC_ENABLE_DAO_GOVERNANCE=true
NEXT_PUBLIC_ENABLE_DEVOPS_AUTOPILOT=true
NEXT_PUBLIC_ENABLE_QUANTUM_SECURITY=true
NEXT_PUBLIC_ENABLE_SATELLITE_SCANNING=true

# === MAP & GEOLOCATION ===
# Mapbox for satellite scanning visualization
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_access_token

# === WEBSOCKET ===
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=5000
NEXT_PUBLIC_WS_MAX_RECONNECT_ATTEMPTS=10

# === APPLICATION SETTINGS ===
NEXT_PUBLIC_APP_NAME=IKODIO Bug Bounty
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# === SOCIAL MEDIA ===
NEXT_PUBLIC_TWITTER_HANDLE=@ikodio
NEXT_PUBLIC_DISCORD_INVITE=https://discord.gg/ikodio
NEXT_PUBLIC_GITHUB_URL=https://github.com/ikodio

# === FILE UPLOAD ===
NEXT_PUBLIC_MAX_FILE_SIZE_MB=50
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.pdf,.zip,.txt,.json,.har,.log

# === PRODUCTION-ONLY SETTINGS (uncomment for production) ===
# NEXT_PUBLIC_ENVIRONMENT=production
# NEXT_PUBLIC_API_URL=https://api.ikodio.com/api/v1
# NEXT_PUBLIC_WS_URL=wss://api.ikodio.com/ws
